{
  "name": "nuntia",
  "version": "0.1.0",
  "description": "Generate AI-authored release notes and migration guides from a commit range.",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "npm run typecheck && rimraf dist && ncc build src/index.ts -o dist --minify --source-map --license licenses.txt && npm run copy-assets",
    "copy-assets": "copyfiles -f examples/Nuntia.prompt dist",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "dev": "tsc -w",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "github-actions",
    "release-notes",
    "changelog",
    "migration-guide",
    "ai"
  ],
  "author": "Daniel Chalmers",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "files": [
    "action.yml",
    "README.md",
    "dist/"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vercel/ncc": "^0.38.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.4.5",
    "rimraf": "^5.0.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@actions/artifact": "^2.1.1",
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@google/genai": "^1.21.0"
  }
}
